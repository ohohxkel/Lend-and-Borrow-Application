<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".StudentHome"
    android:background="@color/colorWhite">

    <Button
        android:id="@+id/button_student_scanner"
        android:layout_width="202dp"
        android:layout_height="215dp"
        android:layout_marginTop="20dp"
        android:background="@drawable/button_admin_scan"
        android:fontFamily="@font/segoeuib"
        android:paddingRight="80dp"
        android:paddingBottom="140dp"
        android:text="Scan"
        android:textSize="20sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.038"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imageView" />

    <Button
        android:id="@+id/button_student_receipt"
        android:layout_width="202dp"
        android:layout_height="215dp"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="8dp"
        android:background="@drawable/button_student_receipt"
        android:fontFamily="@font/segoeuib"
        android:paddingRight="40dp"
        android:paddingBottom="140dp"
        android:text="E-Receipt"
        android:textSize="20sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imageView" />

    <Button
        android:id="@+id/button_student_help"
        android:layout_width="202dp"
        android:layout_height="215dp"
        android:background="@drawable/button_student_help"
        android:fontFamily="@font/segoeuib"
        android:paddingRight="80dp"
        android:paddingBottom="140dp"
        android:text="Help"
        android:textSize="20sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.038"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imageView"
        app:layout_constraintVertical_bias="0.761" />

    <Button
        android:id="@+id/button_logout"
        android:layout_width="27dp"
        android:layout_height="26dp"
        android:background="@drawable/button_student_logout"
        app:layout_constraintBottom_toBottomOf="@+id/imageView"
        app:layout_constraintEnd_toEndOf="@+id/imageView"
        app:layout_constraintHorizontal_bias="0.08"
        app:layout_constraintStart_toStartOf="@+id/imageView"
        app:layout_constraintTop_toTopOf="@+id/imageView"
        app:layout_constraintVertical_bias="0.112" />

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="415dp"
        android:layout_height="245dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0"
        app:srcCompat="@drawable/student_header" />

    <TextView
        android:id="@+id/textView_studentnumber"
        android:layout_width="209dp"
        android:layout_height="27dp"
        android:fontFamily="@font/segoeui"
        android:text="Student Number"
        android:textColor="@color/colorWhite"
        android:textSize="20dp"
        app:layout_constraintBottom_toBottomOf="@+id/imageView"
        app:layout_constraintEnd_toEndOf="@+id/imageView"
        app:layout_constraintHorizontal_bias="0.151"
        app:layout_constraintStart_toStartOf="@+id/imageView"
        app:layout_constraintTop_toTopOf="@+id/imageView"
        app:layout_constraintVertical_bias="0.737" />

    <TextView
        android:id="@+id/textView_yearandsection"
        android:layout_width="161dp"
        android:layout_height="28dp"
        android:fontFamily="@font/segoeui"
        android:text="Year and Section"
        android:textColor="@color/colorWhite"
        android:textSize="20dp"
        app:layout_constraintBottom_toBottomOf="@+id/imageView"
        app:layout_constraintEnd_toEndOf="@+id/imageView"
        app:layout_constraintHorizontal_bias="0.123"
        app:layout_constraintStart_toStartOf="@+id/imageView"
        app:layout_constraintTop_toTopOf="@+id/imageView"
        app:layout_constraintVertical_bias="0.840" />

    <TextView
        android:id="@+id/textView_name"
        android:layout_width="382dp"
        android:layout_height="37dp"
        android:fontFamily="@font/segoeuib"
        android:text="NAME"
        android:textAllCaps="true"
        android:textColor="@color/colorWhite"
        android:textSize="25dp"
        app:layout_constraintBottom_toBottomOf="@+id/imageView"
        app:layout_constraintEnd_toEndOf="@+id/imageView"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="@+id/imageView"
        app:layout_constraintTop_toTopOf="@+id/imageView"
        app:layout_constraintVertical_bias="0.63" />

</androidx.constraintlayout.widget.ConstraintLayout>